@page
@model epmgr.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Username"></label>
        <input class="form-control" asp-for="@Model.Username">
        <span asp-validation-for="@Model.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input type="password" class="form-control" asp-for="@Model.Password">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="@Model.Persistent">
        <label class="form-check-label" asp-for="@Model.Persistent"></label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>