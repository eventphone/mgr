@page "{handler?}"
@model epmgr.Pages.Omm.DECTStatusModel
@{
    ViewData["Title"] = "DECTStatus";
}

<h2>Current DECT-Status</h2>
<table id="table" class="table table-striped">
    <tbody>
        <tr>
            <th>
                Autocreate-Status
            </th>
            <td>
                <form method="post" asp-page-handler="Autocreate">
                    <div class="btn-group">
                        @if (Model.AutoCreate)
                        {
                            <button type="submit" name="autocreate" value="true" class="btn btn-primary active"> Enabled</button>
                            <button type="submit" name="autocreate" value="false" class="btn btn-secondary"> Disabled</button>
                        }
                        else
                        {
                            <button type="submit" name="autocreate" value="true" class="btn btn-secondary"> Enabled</button>
                            <button type="submit" name="autocreate" value="false" class="btn btn-primary active"> Disabled</button>
                        }
                    </div>
                </form>
        </tr>
        <tr>
            <th>
                DECT Subscription
            </th>
            <td>
                <form method="post" asp-page-handler="SubscriptionMode">
                    <div class="btn-group">
                        @if (Model.Mode == mitelapi.Types.DECTSubscriptionModeType.Configured)
                        {
                            <button type="submit" name="mode" value="configured" class="btn btn-primary active">Enabled</button>
                            <button type="submit" name="mode" value="disabled" class="btn btn-secondary">Disabled</button>
                        }
                        else if (Model.Mode == mitelapi.Types.DECTSubscriptionModeType.Off)
                        {
                            <button type="submit" name="mode" value="configured" class="btn btn-secondary">Enabled</button>
                            <button type="submit" name="mode" value="wildcard" class="btn btn-primary active">Disabled</button>
                        }
                    </div>
                </form>
        </tr>
    <tr>
        <th>
            RFP Capture Status
        </th>
        <td>
        <form method="post" asp-page-handler="RFPCapture">
            <div class="btn-group">
                @if (Model.RFPCapture)
                {
                    <button type="submit" name="rfpcapture" value="true" class="btn btn-primary active"> Enabled</button>
                    <button type="submit" name="rfpcapture" value="false" class="btn btn-secondary"> Disabled</button>
                }
                else
                {
                    <button type="submit" name="rfpcapture" value="true" class="btn btn-secondary"> Enabled</button>
                    <button type="submit" name="rfpcapture" value="false" class="btn btn-primary active"> Disabled</button>
                }
            </div>
        </form>
    </tr>
    <tr>
        <th>
            Device & User Cleanup
        </th>
        <td>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#cleanupModal">Cleanup</button>
            <div class="modal fade" id="cleanupModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalLabel">Caution - Deletion could be fatal</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <b>This will remove all users and devices from OMM.</b>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            <form asp-page-handler="Cleanup">
                                <button type="submit" class="btn btn-group btn-danger" role="button">Cleanup anyways</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </td>
    </tr>
    </tbody>
</table>
